<% if tasks.any? %>
  <ul class="media-list">
    <% tasks.each do |task| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(task, { size: 50 }) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <%= task.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', task_path(task) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate tasks %>
<% end %>