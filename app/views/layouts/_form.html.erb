<div class="row">
  <div class="col-xs-12"></div>
  <div class="col-sm-8"></div>
  <div class="col-sm-offset-2 col-sm-8"></div>
  <div class="col-lg-6"></div>
  <div class="col-lg-offset-3 col-lg-6"></div>

<%= form_for(tasks) do |f| %>
  <% if tasks.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% tasks.errors.full_tasks.each do |tasks| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="from-group">
    <%= f.label :status, 'タイトル' %>
    <%= f.text_field :status,class: 'from-control' %>
  </div>
  
  <div class="from-group">
    <%= f.label :content, 'メッセージ' %>
    <%= f.text_field :content, class: 'from-control' %>
  </div>

  <%= f.submit '投稿',class: 'btn btn-primary'  %>
<% end %>